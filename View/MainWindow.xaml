<Window x:Class="drakek.Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:drakek"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent"
        Title="Drakek" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="gray">
            <Grid.RowDefinitions>
                <RowDefinition Height="50px"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Main Menu" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Padding="10"/>
            <ListView Grid.Row="1" x:Name="mainMenu" HorizontalAlignment="Left" Height="450" Padding="10" VerticalAlignment="Top" Width="200" Background="Transparent" SelectionChanged="changeSelectedMenuPage">
                <ListViewItem Content="Dashboard" Name="btnDashboard"/>
                <ListViewItem Content="Product" Name="btnProduct"/>
                <ListViewItem Content="Item 3"/>
                <ListViewItem Content="Item 4"/>
                <ListViewItem Content="Item 5"/>
            </ListView>
        </Grid>
        <Grid Grid.Column="1" Background="lightgray">
            <Grid.RowDefinitions>
                <RowDefinition Height="30px"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="darkgray" MouseDown="Drag_Window">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 10, 0, 0">
                        <Button Content="Minimize" Click="Minimize_Click" Cursor="Hand" Margin="0, 0, 10, 0"/>
                        <Button Content="Close" Click="Close_Click" Cursor="Hand" Margin="0, 0, 10, 0"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Horizontal" Margin="10, 50, 0, 0" x:Name="renderPages"/>
                </Grid>
        </Grid>
    </Grid>
</Window>
